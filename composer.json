{
  "name": "otetard/ownpad",
  "scripts": {
    "cs:fix": "php-cs-fixer fix",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "lint": "find . -name \\*.php -not -path './3rdparty/*' -print0 | xargs -0 -n1 php -l",
    "test:unit": "phpunit -c tests/phpunit.xml"
  },
  "require-dev": {
    "nextcloud/coding-standard": "^1.1",
    "phpunit/phpunit": "^9"
  }
}
